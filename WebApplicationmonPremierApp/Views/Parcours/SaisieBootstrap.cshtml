
@{
    ViewBag.Title = "SaisieBootstrap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> SaisieBootstrap </h2>

<form action="/Parcours/SaisieBootstrap" method="post">
    <div class="form-group row">
        <label class="col-md-2" for="Id">Numéro</label>
        <div class=" col-md-10">
            <input type="number" name="Id" class="form-control" placeholder="Numéro">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" for="Nom">Nom</label>
        <div class=" col-md-10">
            <input type="text" name="Nom" class="form-control" placeholder="Nom du parcours">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" for="Slogan">Slogan</label>
        <div class=" col-md-10">
            <input type="text" name="Slogan" class="form-control" placeholder="Slogan du parcours">
        </div>

    </div>
    <div class="form-group row">
        <label class="col-md-2" for="Logo">Logo</label>
        <div class=" col-md-10">
            <input type="text" name="Logo" class="form-control" placeholder="Logo du parcours">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Ajouter</button>
    </div>
</form>

